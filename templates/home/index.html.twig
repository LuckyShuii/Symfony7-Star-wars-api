{% extends 'base.html.twig' %}

{% block title %}Index des personnages{% endblock %}

{% block body %}
    {% for personnage in personnages %}

        <article>
            <header><a href=
                       "{{ path(
                           'app_personnage',
                           {'id': personnage.url|replace({
                               'https://swapi.py4e.com/api/people/': '',
                               '/': ''
                           })
                           }) }}">
                    {{ personnage.name }}</a></header>
            <ul>
                <li>Ann√©e de naissance : {{ personnage.birth_year }}</li>
                <li>Taille : {{ personnage.height }}</li>
                <li>Poids : {{ personnage.mass }}</li>
                <li>Couleur des cheveux : {{ personnage.hair_color }}</li>
                <li>Couleur des yeux : {{ personnage.eye_color }}</li>
                <li>Couleur de peau : {{ personnage.skin_color }}</li>
            </ul>
        </article>

    {% endfor %}
{% endblock %}
